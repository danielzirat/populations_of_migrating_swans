        // // }
        // console.log('unlike: ' + unlike.style.display)
        // console.log('like: ' + like.style.display)
    }

    function postLike(element, id) {
        const route = '/' + element.getAttribute('data-type') + '/' + id + '/' + element.getAttribute('data-action');
        console.log(route);

        const options = {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: null
        };

        fetch(route, options)
            .then(value => value.json())
            .then(value => {
                console.log(value);
                if (!value.success) {
                    if (value.redirect) {
                        window.location = value.redirect;
                        return;
                    }
                    alert('Something went wrong...!');
                    return;
                }
                toggleLikes(element);
            })
            .catch(reason => {
                alert('An Error occurred: ' + reason);
            });
    }
</script>

